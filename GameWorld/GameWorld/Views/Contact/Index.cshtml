@model GameWorld.Domain.Contact

@{
     ViewBag.Title = "Contact Us";
}
<body>
    <div class="contact-container">
        <div class="contact-info">
            <h3>Contact Information</h3>
            <div class="contact-item">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4b/Phone_font_awesome.svg/1200px-Phone_font_awesome.svg.png" alt="Phone">
                <a>+359899042733</a>
            </div>
            <div class="contact-item">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/74/Envelope_alt_font_awesome.svg/1024px-Envelope_alt_font_awesome.svg.png" alt="Mail">
                <a>m.petrov2018@pmg-pernik.com</a>
            </div>
            <div class="contact-item">
                <img src="https://cdn.pixabay.com/photo/2021/06/15/12/17/instagram-6338401_1280.png" alt="Instagram">
                <a>martiparti</a>
            </div>
            <div class="contact-item">
                <img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook">
                <a>Мартин Петров</a>
            </div>
            
            <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2936.550446423208!2d23.030328076577902!3d42.60728071944631!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14aacac3bbc30045%3A0x1282864432d70ccb!2z0J_QnNCTICLQpdGA0LjRgdGC0L4g0KHQvNC40YDQvdC10L3RgdC60Lgi!5e0!3m2!1sen!2sbg!4v1682274682150!5m2!1sen!2sbg"  width="450" height="350" style="border:0;" allowfullscreen="" loading="lazy"></iframe>    
            </div>
        </div>
            
            <div class="contact-form">
                @using (Html.BeginForm("Submit", "Contact"))
            {
                <h3>Contact Form</h3>
            <form method="post">
                <div class="form-group">
                    <label for="firstName">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="lastName">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="email">Subject</label>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
            }
        </div>
        
        </div>
</body>


