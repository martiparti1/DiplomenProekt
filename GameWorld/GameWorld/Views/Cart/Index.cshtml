@model GameWorld.Domain.Cart

<h2>Your Shopping Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Product.Price - item.Quantity*item.Product.Price*item.Product.Discount / 100)</td>
                    
                </tr>
            }
            <tr>
                
                <td colspan="3">Total:</td>
                <td id="cart-total"></td>
            </tr>
        </tbody>
    </table>

    <a href="@Url.Action("ClearCart", "Cart")">Clear Cart</a>
    <a href="@Url.Action("Checkout", "Cart")">Checkout</a>
}
<script>
    $(document).ready(function () {
        var total = 0;
        $(".item-total").each(function () {
            total += parseFloat($(this).text());
        });
        $("#cart-total").text(total);
    });
</script>