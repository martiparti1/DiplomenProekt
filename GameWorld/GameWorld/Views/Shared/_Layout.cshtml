<!DOCTYPE html>


<style>
    .navbar {
        background: #FFFFFF;
        border-radius: 20px;
        height: 65px;
        display: flex;
        justify-content: center;
    }

    .container-.navbar{
        border-radius: 20px;
    }
    .navbar {
  background: #FFFFFF;
  border-radius: 20px; 
  min-height: 65px;
  display: flex;
  justify-content: center;
  flex-wrap: wrap; 
}

.container.custom-container {
  padding-bottom: 60px;
  width: 100%; 
}


@@media (min-width: 576px) {
  .navbar-nav {
    flex-direction: row;
  }
}

@@media (max-width: 575px) {
  .navbar-brand,
  .navbar-nav {
    margin: 0;
  }

  .navbar-collapse {
    margin-top: 0;
    margin-bottom: 0;
  }

  .navbar-nav .nav-link {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }
}


.gradient-custom
{
background: radial-gradient(circle at center, #6AC4FF, #D68EB2);
}

.custom-container{
    max-width: 1600px;
    margin: 0 auto;
    width: auto;
}

    .footer {
        padding: 20px 0;
        background-color: #f8f9fa;
        text-align: center;
        border-top: 1px solid #ccc;
    }
    .container.custom-container {
        padding-bottom: 60px;
    }

</style>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="gradient-custom">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 custom-container">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>GW</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                        {
                            <li class="nav-item active">
                                <div class="dropdown show">
                                    <a class="nav-link active dropdown-toggle" href="e"
                                       id="dropdownMenuLink" data-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        Statistic Module
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Client" asp-action="Index">Clients</a>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="Index">Orders</a>
                                        <a class="dropdown-item" asp-controller="Statistics" asp-action="Index">Statistics</a>
                                        <a class="dropdown-item" asp-controller="Contact" asp-action="Messages">Messages</a>
                                    </div>

                                </div>
                            </li>
                        }
                    </ul>
                    <div class="navbar-search ml-auto">
                    <form asp-controller="Product" asp-action="Index" method="get">
                         <div class="input-group">
                           <input type="text" class="form-control" name="searchStringProductName" placeholder="Search for a product...">
                           <div class="input-group-append">
                           <button type="submit" class="btn btn-outline-primary">
                           <span class="button-text">Search</span>
                           </button>
                          </div>
                            </div>
                     </form>
                     </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <footer class=" footer text-muted">
        <div class="container" style="text-align: center;">
            &copy; 2023 - GameWorld - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> | <a asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a>
        </div>
    </footer>
    <div class="container custom-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
