@{ 
    ViewData["Title"] = "Thank you for your purchase";
}
 <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bootstrap 5 Thank You Example</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <style>
        .card {
            position: absolute;
            left: 50%;
            transform: translate(-45%);
            width: 80%;

            position: relative;
            margin-top: 10%;
            margin-bottom: 10%;
            width: 80%;
            min-height: 70vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        
        }
        .p-space{
        padding:5px;
    }
    </style>

    <body class="gradient-custom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card bg-white shadow p-5">
                        <div class="mb-4 text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="text-success bi bi-check-circle" width="75" height="75"
                                 fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                            </svg>
                        </div>
                        <div class="text-center">
                            <h1>You successfully added a product!</h1>
                            <p class="p-space"></p>
                            
                            <hr>
                            <a asp-action="Create" class="btn btn-info">Add a new product</a>
                            <p class="p-space"></p>
                           <a asp-action="Index" class="btn btn-info ">List all</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    @{
    ViewBag.Title = "Thank You";
}
